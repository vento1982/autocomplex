!!!
%head
	%title Autocomplex
	= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
	= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags
%body
	%header
		=render partial: 'layouts/navigation'
	=bootstrap_flash
	%main
		.container-fluid
			-if params[:controller] != 'pictures'
				.row.wrapper-jumbotron
					.col-md-12				
						.jumbotron
							.container
								%h1.jumbotron-slogan-header 
									-if params[:controller] == 'ads' && params[:action] == 'index'
										We are hiring! 
									- if params[:controller] == 'static' && params[:action] == 'about'
										Great choose !!!	
			=yield
	%footer{:class => 'site-footer'}
		=render partial: 'layouts/footer'
