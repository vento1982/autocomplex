%section.padded-section
	.row
		.col-md-8.col-md-offset-2.ad-boxes
			- @ads.each_slice(3) do |slice|
				.row
					- slice.each do |ad|
						.col-sm-6.col-md-4.ad-box
							.thumbnail
								.caption
									%h3= ad.title
									%p= ad.description	
									%p= "Wa≈ºne do: #{ad.validity.strftime("%d %B %Y")}"
									= link_to "Apply Now", ad_path(ad), class: "btn btn-primary"